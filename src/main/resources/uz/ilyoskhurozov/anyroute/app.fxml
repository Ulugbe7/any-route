<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uz.ilyoskhurozov.anyroute.Controller">
   <center>
      <AnchorPane fx:id="desk" onMouseClicked="#mouseClickOnDesk" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
       <ToolBar orientation="VERTICAL" BorderPane.alignment="BOTTOM_LEFT">
           <opaqueInsets>
               <Insets />
           </opaqueInsets>
           <VBox prefHeight="500.0" prefWidth="150.0" spacing="10.0">
               <padding>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <Label text="Tools:">
                   <font>
                       <Font name="JetBrains Mono Medium Nerd Font Complete Mono" size="16.0" />
                   </font>
               </Label>
               <HBox alignment="CENTER" prefHeight="29.0" prefWidth="126.0" spacing="10.0">
                   <ToggleButton fx:id="routerBtn" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" prefHeight="50.0" prefWidth="42.0">
                       <graphic>
                           <FontIcon iconLiteral="mdi2r-router" iconSize="40" selectionFill="BLACK" />
                       </graphic>
                   </ToggleButton>
                   <ToggleButton fx:id="cableBtn" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" prefHeight="50.0" prefWidth="42.0">
                       <graphic>
                           <FontIcon iconLiteral="mdi2c-cable-data" iconSize="40" selectionFill="BLACK" />
                       </graphic>
                   </ToggleButton>
               </HBox>
               <HBox alignment="CENTER" prefHeight="50.0" prefWidth="72.0" spacing="10.0">
                   <VBox.margin>
                       <Insets />
                   </VBox.margin>
                   <ToggleButton fx:id="removeBtn" contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" prefHeight="50.0" prefWidth="42.0">
                       <graphic>
                           <FontIcon iconLiteral="mdi2c-close-thick" iconSize="40" selectionFill="BLACK" />
                       </graphic>
                   </ToggleButton>
               <Button contentDisplay="GRAPHIC_ONLY" focusTraversable="false" mnemonicParsing="false" onAction="#clearDesk">
                  <graphic>
                     <FontIcon iconLiteral="mdi2d-delete-forever-outline" iconSize="40" selectionFill="BLACK" />
                  </graphic>
               </Button>
               </HBox>
               <Separator prefHeight="10.0" prefWidth="126.0">
                   <opaqueInsets>
                       <Insets left="-10.0" right="-10.0" />
                   </opaqueInsets>
               </Separator>
               <Label text="Algorithm:">
                   <font>
                       <Font name="JetBrains Mono Medium Nerd Font Complete Mono" size="16.0" />
                   </font>
               </Label>
               <ChoiceBox fx:id="algorithms" focusTraversable="false" prefWidth="150.0" />
               <Separator prefHeight="10.0" prefWidth="126.0">
                   <opaqueInsets>
                       <Insets left="-10.0" right="-10.0" />
                   </opaqueInsets>
                   <VBox.margin>
                       <Insets top="30.0" />
                   </VBox.margin>
               </Separator>
               <HBox alignment="CENTER">
                   <Button fx:id="findRouteBtn" contentDisplay="GRAPHIC_ONLY" disable="true" focusTraversable="false" mnemonicParsing="false" onAction="#findRoute" prefHeight="50.0" prefWidth="90.0">
                       <font>
                           <Font name="JetBrains Mono Medium Nerd Font Complete Mono" size="16.0" />
                       </font>
                       <graphic>
                           <FontIcon iconLiteral="mdi2m-map-search" iconSize="40" selectionFill="BLACK" />
                       </graphic>
                   </Button>
               </HBox>
           </VBox>
       </ToolBar>
   </right>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <Menu mnemonicParsing="false" text="Menu">
               <MenuItem mnemonicParsing="false" onAction="#cancel" text="Cancel" visible="false">
                   <accelerator>
                       <KeyCodeCombination alt="UP" code="ESCAPE" control="ANY" meta="UP" shift="UP" shortcut="UP" />
                   </accelerator>
               </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#close" text="Exit">
               <accelerator>
                  <KeyCodeCombination alt="DOWN" code="X" control="UP" meta="UP" shift="UP" shortcut="UP" />
               </accelerator>
            </MenuItem>
           </Menu>
       </MenuBar>
   </top>
</BorderPane>
